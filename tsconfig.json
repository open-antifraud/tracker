{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@gauf/tracker": ["./lib/main"],
      "@gauf/*": ["./lib/*"]
    },
    "rootDir": "./lib",
    "outDir": "./build"
  },
  "exclude": [
    "./build",
    "./tests"
  ]
}
